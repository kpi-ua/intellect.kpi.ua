@model Campus.Common.Base.Record

@if (!String.IsNullOrEmpty(Model.Value))
{
    <tr>
        <td>
            @Model.Name
        </td>
        <td>
            @if (Model.Value.StartsWith("http://") || Model.Value.StartsWith("https://"))
            {
                var text = Model.Value
                    .Replace("http://", string.Empty)
                    .Replace("https://", string.Empty);
                
                <a href="@Model.Value">@text</a>
            }
            else
            {
                @Model.Value
            }
        </td>
        <td>
    </tr>
}
